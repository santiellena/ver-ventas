<title>Mercado 1990 - Proveedores</title>
 <!-- Bootstrap -->
    <link href="../../css/datatables.net/css/jquery.dataTables.min.css">
<!-- Datatables -->
    
    <link href="../../css/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">
    <link href="../../css/datatables.net-buttons-bs/css/buttons.bootstrap.min.css" rel="stylesheet">
    <link href="../../css/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css" rel="stylesheet">
    <link href="../../css/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" rel="stylesheet">
    <link href="../../css/datatables.net-scroller-bs/css/scroller.bootstrap.min.css" rel="stylesheet">

<!-- Custom CSS -->   

<!-- page content -->
<div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Proveedores</h2>
                    <ul class="nav navbar-right panel_toolbox">
                      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                      </li>
                      <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="#">Proveedores Activos</a>
                          </div>
                      </li>
                      <li><a class="close-link"><i class="fa fa-close"></i></a>
                      </li>
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                      <div class="row">
                        <div class="history-table" style="width: 100%;">
                          <div class="pull-right">
                            <button class="btn btn-info pull-right" onclick="loadAddWindow();">Agregar Proveedor</button>
                          </div>
                          <div class="col-sm-12">
                            <div class="card-box table-responsive">
                    <table id="datatable-buttons" class="table table-striped table-compact dt-responsive nowrap table-bordered" cellspacing="0" style="width: 100%;">
                     <thead>
                        <tr>
                          <th>ID</th>
                          <th>Nombre</th>
                          <th>Teléfono</th>
                          <th>CUIT</th>
                          <th>CBU</th>
                          <th>EMAIL</th>
                          <th>Núm. Documento</th>
                          <th>Provincia</th>
                          <th>Departamento</th>
                          <th>Código Postal</th>
                          <th>Localidad</th>
                          <th>Dirección</th>
                          <th>Acciones</th>
                        </tr>
                      </thead>
                      <tbody id="tbody-suppliers">
                        {{#each suppliers}}
                        <tr id="supplier{{this.id}}">
                          <th id="id{{this.id}}">{{this.id}}</th>
                          <th id="name{{this.id}}">{{this.name}}</th>
                          <th id="phoneNumber{{this.id}}">{{this.phoneNumber}}</th>
                          <th id="cuit{{this.id}}">{{this.cuit}}</th>
                          <th id="cbu{{this.id}}">{{this.cbu}}</th>
                          <th id="email{{this.id}}">{{this.email}}</th>
                          <th id="numDoc{{this.id}}">{{this.numDoc}}</th>
                          <th id="dirProv{{this.id}}">{{this.dirProv}}</th>
                          <th id="dirDepto{{this.id}}">{{this.dirDepto}}</th>
                          <th id="dirPostCode{{this.id}}">{{this.dirPostCode}}</th>
                          <th id="dirCity{{this.id}}">{{this.dirCity}}</th>
                          <th id="dirStreet{{this.id}}">{{this.dirStreet}}</th>
                          <th>
                            <button class="btn btn-warning" onclick="loadEditWindow({{this.id}});">Editar</button>
                          </th>
                        </tr>
                        {{/each}}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              </div>
            </div>
          </div>
      </div>
      <script src="../../js/suppliers.js"></script>