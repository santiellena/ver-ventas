<body>
    
    <div class="container body">
        <div class="main_container" style="display: flex;">
            <div class="x_content">
                <div class="bs-example" data-example-id="simple-jumbotron">
                  <div class="jumbotron col-md-5" style="height: 98vh; margin-bottom: 0;">
                    <div class="methods-container">
                        <h3 class="lead" id="showCustomer"></h3>
                        <h4 class="lead">Formas de pago:</h4>
                        <button class="btn btn-warning button-method" onclick="payWithCash();">Efectivo</button>
                        <button class="btn btn-primary button-method" onclick="payWithCard();">Tarjeta</button>
                        <button class="btn btn-danger button-method" onclick="payWithTransference();">Transferencia Bancaria</button>
                    </div>
                  </div>
                </div>
                <div class="second-content">
                    <div class="col-md-8 col-sm-8  form-group has-feedback">
                        <h2 id="showDebt" class="lead" style="text-align:center; margin-top: 5.5rem"></h2>
                        <input type="number" class="form-control has-feedback-left" id="money" placeholder="Dinero" autofocus style="margin-bottom: .5rem;">
                        <input type="text" class="form-control has-feedback-left" id="observation" placeholder="ObservaciÃ³n">
                    </div>
                    <br>
                    <button class="btn btn-danger" style="width: 70%;" onclick="window.close();"><span class="fa fa-close icn-method"></span>Cancelar</button>
                </div>
              </div>
        </div>
    </div>
    <input type="hidden" name="" id="idCustomer" value="{{idCustomer}}">
