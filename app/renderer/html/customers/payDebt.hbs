         <!-- NProgress -->
         <script src="../../js/nprogress/nprogress.js"></script>
         <!-- jQuery Sparklines -->
         <script src="../../js/jquery-sparkline/dist/jquery.sparkline.min.js"></script>
         <!-- Custom Theme Scripts -->
         <script src="../../js/custom.min.js"></script>

