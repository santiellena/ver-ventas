<!-- Custom CSS -->   

    <link rel="stylesheet" href="../../css/sells-history.css">
    <link rel="stylesheet" href="../../css/addProduct.css">

<!-- page content -->
<div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Editar Cliente</h2>
                    <ul class="nav navbar-right panel_toolbox">
                      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                      </li>
                      <li onclick="window.close();"><a class="close-link"><i class="fa fa-close"></i></a>
                      </li>
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                      <div class="row" style="display: flex; justify-content: center;">
                          
                                <form action="" id="form" class="form">
                                    <div class="item form-group div-input">
									    <label class="col-form-label col-md-5 col-sm-5 label-align" for="id-customer">Código de Cliente</label>
			                            <div class="col-md-14 col-sm-14 has-feedback form-group">
										    <input type="number" class="form-control has-feedback-right" style="width: 18rem" id="id-customer" required="required" onkeyup="checkIdValue()" onchange="checkIdValue()">
											<span class="fa fa-circle-thin form-control-feedback right" id="codeFeedback" style="display: inline-block; right: 17%" aria-hidden="true"></span>
		                                </div>
	                                </div>
                                    <div class="item form-group div-input">
									    <label class="col-form-label col-md-5 col-sm-5 label-align" for="name-customer">Razón Social</label>
			                            <div class="col-md-14 col-sm-14 ">
										    <input type="text" class="form-control" style="width: 18rem" id="name-customer" required="required" autofocus>
		                                </div>
	                                </div>
                                    <div class=" item form-group div-input">
											<label class="col-form-label col-md-5 col-sm-5 label-align" for="docType-customer">Tipo de Documento</label>
											<div class="col-md-14 col-sm-14">
												<select class="form-control" required="required" id="docType-customer"  style="width: 18rem">
													{{#each docTypes}}
													<option value="{{this.id}}">{{this.description}}</option>
													{{/each}}
												</select>
											</div>
									</div>
                                    <div class="item form-group div-input">
									    <label class="col-form-label col-md-5 col-sm-5 label-align" for="numDoc-customer">Número de Documento</label>
			                            <div class="col-md-14 col-sm-14">
										    <input type="number" class="form-control" style="width: 18rem" id="numDoc-customer"  style="width: 18rem" required="required">
		                                </div>
	                                </div>
                                    <div class="item form-group  div-input">
			                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="cuit-customer">CUIT/CUIL</label>
			                            <div class="col-md-14 col-sm-14 ">
			                                <input type="number"  style="width: 18rem" id="cuit-customer" required="required" class="form-control ">
		                                </div>
	                                </div>
                                     <div class="item form-group  div-input">
			                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="email-customer">Email</label>
			                            <div class="col-md-14 col-sm-14 ">
			                                <input type="email"  style="width: 18rem" id="email-customer" required="required" class="form-control ">
		                                </div>
	                            </div>
                                    <div class="item form-group  div-input">
			                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="phoneNumber-customer">Teléfono</label>
			                            <div class="col-md-14 col-sm-14">
			                                <input type="number"  style="width: 18rem" id="phoneNumber-customer" required="required" class="form-control ">
		                                </div>
	                                </div>
                                    <div class="item form-group div-input">
											<label class="col-form-label col-md-5 col-sm-5 label-align" for="province-customer">Provincia</label>
											<div class="col-md-14 col-sm-14 ">
												<select class="form-control"  id="province-customer" style="width: 18rem" required="required" onchange="loadDepartments();">
													{{#each provinces}}
                                                        <option value="{{this.id}}">{{this.nombre}}</option>
                                                    {{/each}}
												</select>
											</div>
									</div>
                                    <div class="item form-group div-input">
											<label class="col-form-label col-md-5 col-sm-5 label-align" for="department-customer">Departamento</label>
											<div class="col-md-14 col-sm-14 ">
												<select class="form-control"  id="department-customer" style="width: 18rem" required="required" onchange="loadCities();">
													
												</select>
											</div>
									</div>
                                    <div class="item form-group  div-input">
			                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="postCode-customer">Código Postal</label>
			                            <div class="col-md-14 col-sm-14">
			                                <input type="number" id="postCode-customer" required="required" class="form-control "  style="width: 18rem">
		                                </div>
	                                </div>
                                    <div class="item form-group div-input">
											<label class="col-form-label col-md-5 col-sm-5 label-align" for="city-customer">Localidad</label>
											<div class="col-md-14 col-sm-14">
												<select class="form-control"  id="city-customer" style="width: 18rem" required="required">
													
												</select>
											</div>
									</div>
                                     <div class="item form-group  div-input">
			                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="street-customer">Dirección</label>
			                            <div class="col-md-14 col-sm-14">
			                                <input type="text" id="street-customer" required="required" class="form-control "  style="width: 18rem">
		                                </div>
	                                </div>
                                    <div class="item form-group  div-input">
			                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="debts-customer">Deuda Inicial</label>
			                            <div class="col-md-14 col-sm-14 ">
			                                <input type="number" id="debts-customer" value="0" required="required" class="form-control " style="width: 18rem">
		                                </div>
	                                </div>
                                    <button type="submit" style="display: none;"></button>
                                </form>
                                <div class="ln_solid"></div>
                                <div style="display: flex; justify-content: center; margin-top: 1rem">
                                            <button class="btn btn-warning" type="submit" onclick="editCustomer();"><i class="fa fa-edit"></i> Modificar Cliente</button>
                                            <button class="btn btn-danger" onclick="window.close();"><i class="fa fa-close"></i> Cancelar</button>
                                </div>
                    </div>
                  </div>
                </div>
</div>
<script src="../../js/editCustomer.js"></script>
<script>
	const form = document.getElementById('form');

	const func = e => {
		e.preventDefault();
	};

	form.addEventListener('submit', func, true);
</script>