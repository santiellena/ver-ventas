<!-- Footer CSS -->

    <link rel="stylesheet" href="../../css/footer.css">

<!-- page content -->
<div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Clientes / Cuentas Corriente</h2>
                    <ul class="nav navbar-right panel_toolbox">
                      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                      </li>
                      <li><a class="close-link"><i class="fa fa-close"></i></a>
                      </li>
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                      <div class="row">
                        <div class="history-table">
                          <div class="col-sm-12">
                            <div class="card-box table-responsive">
                    <table id="datatable-buttons" class="table table-striped table-compact dt-responsive nowrap table-bordered" style="width:100%;"  cellspacing="0">
                     <thead>
                        <tr>
                          <th>ID</th>
                          <th>Razón Social</th>
                          <th>T. Doc.</th>
                          <th>Documento</th>
                          <th>CUIT</th>
                          <th>Email</th>
                          <th>Núm. Cel</th>
                          <th>Localidad</th>
                          <th>Dirección</th>
                          <th>Saldo</th>
                        </tr>
                      </thead>
                      <tbody id="tbody-customers">
                        {{#if customers}}
                        {{#each customers}}
                        <tr id="tr{{this.id}}">
                          <th id="id{{this.id}}">{{this.id}}</th>
                          <th id="name{{this.id}}">{{this.name}}</th>
                          <th id="docType{{this.id}}">{{this.docType.description}}</th>
                          <th id="numDoc{{this.id}}">{{this.numDoc}}</th>
                          <th id="cuit{{this.id}}">{{this.cuit}}</th>
                          <th id="email{{this.id}}">{{this.email}}</th>
                          <th id="phoneNumber{{this.id}}">{{this.phoneNumber}}</th>
                          <th id="city{{this.id}}">{{this.dirCity.nombre}}</th>
                          <th id="street{{this.id}}">{{this.dirStreet}}</th>
                          <th id="debts{{this.id}}">$ {{this.debts}}</th>
                        </tr>
                        {{/each}}
                        {{else}}
                            <tr class="odd" id="tr-alert">
                                <td valign="top" colspan="11" class="dataTables_empty">Ningún Cliente Existente</td>
                            </tr>
                        {{/if}}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              <div class="ln_solid"></div>
              </div>
            </div>
                </div>
              </div>
              <div id="mobile-footer" style="border-top: 1.5px solid #111;">
                  <div id="mobile-footer-container">
                    <div class="division-buttons" style="margin-bottom: 3rem;">
                        <button class="btn btn-success" id="add-customer-button"><i class="fa fa-plus"></i> Agregar Cliente</button>
                        <button class="btn btn-warning" id="edit-customer-button"><i class="fa fa-edit"></i> Modificar Cliente</button>
                        <button class="btn btn-danger" id="delete-customer-window"><i class="fa fa-trash-o"></i> Eliminar Cliente</button>
                        <button class="btn btn-info" id="pay-customer-debt"><i class="fa fa-folder-open-o"></i> Pago Deuda Cuenta Corriente</button>
                    </div>
                  </div>
              </div>
<script src="../../js/customers.js"></script>