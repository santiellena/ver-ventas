<title>Mercado 1990 - Stock de Productos</title>
 <!-- Bootstrap -->
    <link href="../../css/datatables.net/css/jquery.dataTables.min.css">
<!-- Datatables -->
    
    <link href="../../css/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">
    <link href="../../css/datatables.net-buttons-bs/css/buttons.bootstrap.min.css" rel="stylesheet">
    <link href="../../css/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css" rel="stylesheet">
    <link href="../../css/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" rel="stylesheet">
    <link href="../../css/datatables.net-scroller-bs/css/scroller.bootstrap.min.css" rel="stylesheet">

<!-- Custom CSS -->

<!-- Footer CSS -->

    <link rel="stylesheet" href="../../css/footer.css">

<!-- page content -->
<div class="col-md-12 col-sm-12 ">
                <div class="x_panel" >
                  <div class="x_title">
                    <h2>Productos</h2>
                    <ul class="nav navbar-right panel_toolbox">
                      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                      </li>
                      <li onclick="window.close();"><a class="close-link"><i class="fa fa-close"></i></a>
                      </li>
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content" style="margin-bottom: 15rem;">
                      <div class="row">
                        <div class="history-table">
                          <div class="col-sm-12">
                            <div class="card-box table-responsive">
                    <table id="datatable-buttons" class="table table-striped table-compact dt-responsive nowrap table-bordered" style="width:100%; height: 60%; overflow-y: scroll; overflow-x:hidden; cellspacing="0"">
                     <thead>
                        <tr>
                          <th>Código</th>
                          <th>Descripción</th>
                          <th>Stock</th>
                          <th>Precio Compra</th>
                          <th>Precio Mayorista</th>
                          <th>Precio Minorista</th>
                          <th>Departamento</th>
                          <th>Ubicación</th>
                          <th>Unidad de Medida</th>
                        </tr>
                      </thead>
                      <tbody id="tbody-products">
                        {{#if products}}
                        {{#each products}}
                        <tr id="tr{{this.id}}">
                          <th id="id{{this.id}}">{{this.id}}</th>
                          <th id="desc{{this.id}}">{{this.description}}</th>
                          <th id="stock{{this.id}}">{{this.stock}}</th>
                          <th id="buyPrice{{this.id}}">$ {{this.buyPrice}}</th>
                          <th id="wholesalerPrice{{this.id}}">$ {{this.wholesalerPrice}}</th>
                          <th id="unitPrice{{this.id}}">$ {{this.unitPrice}}</th>
                          <th id="department{{this.id}}">{{this.department.description}}</th>
                          <th id="location{{this.id}}">{{this.store.description}}, {{this.exposition.description}}</th>
                          <th id="unitMeasure{{this.id}}">{{this.unitMeasure.longDescription}} ({{this.unitMeasure.shortDescription}})</th>
                        </tr>
                        {{/each}}
                        {{else}}
                            <tr class="odd" id="tr-alert">
                                <td valign="top" colspan="9" class="dataTables_empty">Ningún Producto Existente</td>
                            </tr>
                        {{/if}}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              <div class="ln_solid"></div>
              </div>
            </div>
                </div>
              </div>
              <div id="mobile-footer" style="border-top: 1.5px solid #111;">
                  <div id="mobile-footer-container">
                    <div class="division-buttons">
                        <button class="btn btn-success" id="add-product-button"><i class="fa fa-plus"></i> Agregar Producto</button>
                        <button class="btn btn-warning" id="edit-product-button"><i class="fa fa-edit"></i> Modificar Producto</button>
                        <button class="btn btn-danger" id="delete-product-button"><i class="fa fa-trash-o"></i> Eliminar Producto</button>
                        <button class="btn btn-primary" id="add-buy-button"><i class="fa fa-truck"></i> Agregar Inventario</button>
                        <button class="btn btn-secondary" id="departments-button"><i class="fa fa-sitemap"></i> Departamentos</button>
                        <button class="btn btn-success" id="locations-button"><i class="fa fa-map-marker"></i> Ubicaciones</button>
                    </div>
                    <div class="division-data">
                        <div class="item form-group">
									<label class="col-form-label col-md-7 col-sm-7 label-align label-shower" for="investment-amount">Dinero Total en Inventario (Inversión): </label>
			                        <div class="col-md-4 col-sm-4 ">
										<input type="text" class="form-control has-feedback-left" disabled="disabled" id="investment-amount" readonly="readonly" placeholder="">
		                            </div>
	                    </div>
                        <div class="ln_solid"></div>
                        <div class="item form-group">
									<label class="col-form-label col-md-7 col-sm-7 label-align label-shower" for="profit-amount">Dinero Total en Inventario (A la venta): </label>
			                        <div class="col-md-4 col-sm-4 ">
										<input type="text" class="form-control has-feedback-left" disabled="disabled" id="profit-amount" readonly="readonly" placeholder="">
		                            </div>
	                    </div>
                    </div>
                  </div>
              </div>
<script src="../../js/stock.js"></script>