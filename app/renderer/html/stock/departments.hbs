<!-- page content -->
<div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Departamentos</h2>
                    <ul class="nav navbar-right panel_toolbox">
                      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                      </li>
                      <li onclick="window.close();"><a class="close-link"><i class="fa fa-close"></i></a>
                      </li>
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                      <div class="row" style="display: flex; justify-content: center;">
                        <div class="history-table" style="display: flex; justify-content: center;">
                          <div class="col-sm-12" style="display: flex; justify-content: center;">
                            <div class="card-box">
                    <table class="table table-striped table-compact nowrap table-bordered" style="width:100%;"  cellspacing="0">
                     <thead>
                        <tr>
                          <th>ID</th>
                          <th>Nombre</th>
                          <th>Eliminar</th>
                        </tr>
                      </thead>
                      <tbody id="tbody-departments">
                        {{#each departments}}
                        <tr id="tr{{this.id}}">
                          <td>{{this.id}}</td>
                          <td>{{this.description}}</td>
                          <td><button class="btn btn-danger" onclick="deleteDepartment({{this.id}})">X</button></td>
                        </tr>
                        {{/each}}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              </div>
            </div>
                </div>
              </div>
              <div id="mobile-footer" style="border-top: 1.5px solid #111;">
                  <div id="mobile-footer-container">
                      <div class="item form-group" style="padding: 2rem .5rem">
									<label class="col-form-label col-md-7 col-sm-7 label-align label-shower" for="new-department">Nombre del Nuevo Departamento: </label>
			                        <div class="col-md-4 col-sm-4 ">
										<input type="text" class="form-control has-feedback-left" id="new-department" placeholder="">
		                            </div>
                                    <button class="btn btn-success" onclick="addDepartment();"><i class="fa fa-plus"></i></button>
	                    </div>
                  </div>
              </div>
              <script src="../../js/departments.js"></script>