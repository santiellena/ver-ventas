<!-- page content -->
<div class="col-md-12 col-sm-12">
  <div class="x_panel">
    <div class="x_title">
      <h2>Stock Faltante</h2>
      <ul class="nav navbar-right panel_toolbox">
        <li onclick="window.close();"><a class="close-link"><i
              class="fa fa-close"
            ></i></a>
        </li>
      </ul>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <div class="row">
        <div class="history-table">
          <div class="col-sm-12">
            <div class="card-box table-responsive">
              <table
                id="datatable-buttons"
                class="table table-striped table-compact dt-responsive nowrap table-bordered"
                style="width:100%;"
                cellspacing="0"
              >
                <thead>
                  <tr>
                    <th>Código</th>
                    <th>Descripción</th>
                    <th>Departamento</th>
                    <th>Stock Actual</th>
                    <th>Stock Min.</th>
                    <th>Unidad de Medida</th>
                  </tr>
                </thead>
                <tbody id="tbody-missing">
                  {{#each missing}}
                    <tr>
                      <th>{{this.id}}</th>
                      <th>{{this.description}}</th>
                      <th>{{this.department.description}}</th>
                      <th>{{this.stock}}</th>
                      <th>{{this.stockMin}}</th>
                      <th>{{this.unitMeasure.longDescription}} ({{this.unitMeasure.shortDescription}})</th>
                    </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>